<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashcardsApp.Views.BlockPartView"
             Title="{Binding ModuleBlock.Name}">
    <StackLayout>
        <ListView x:Name="BlockPartListView"
                  RowHeight="80"
                  ItemsSource="{Binding BlockParts}"
                  SelectedItem="{Binding SelectedBlockPart}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Number}"/>
                            <Label Text="{Binding Name}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>